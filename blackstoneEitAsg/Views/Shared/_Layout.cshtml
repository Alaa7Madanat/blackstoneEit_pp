<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .Navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f4f4;
            padding: 10px;
        }

        .Logo-top-container {
            display: flex;
            align-items: center;
        }

        .logo-img {
            width: auto;
            height: auto;
        }

        .Center {
            flex-grow: 1;
            text-align: center;
        }

        .Right {
            display: flex;
        }


        .Logout button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 3px;
        }

            .Logout button:hover {
                background-color: #0056b3;
            }

        h1 {
            margin: 0;
            margin-left: 130px;
            color: #333;
            font-family: 'Verdana', sans-serif;
        }
    </style>
</head>
<body>
    <div class="Navbar">
        <div class="Logo-top-container">
            <a asp-controller="Home" asp-action="Home"> <img class="logo-img" src="~/img/logo.png" alt="logo"></a>
        </div>
 
        <div class="Right">
            <div class="Logout">
                <a asp-controller="Login" asp-action="Login"><button>Logout</button></a>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
