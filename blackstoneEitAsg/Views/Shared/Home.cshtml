            ];
            function populateTable(employeeData) {
                $("#employeeList").empty(); // Clear existing rows
                employeeData.forEach(function (employee) {
                    // Add a delete and edit icon in the last column
                    $("#employeeList").append(`<tr><td>${employee.firstName}</td><td>${employee.middleName}</td><td>${employee.lastName}</td><td>${employee.nationality}</td><td>${employee.dob}</td><td>${employee.position}</td><td>${employee.salary}</td><td><a href="#"><span class="glyphicon glyphicon-trash"></span></a></td></tr>`);
                });
            }

            // Initial population of the table
            populateTable(employees);

            // Search functionality
            $("#searchInput").on("input", function () {
                var searchText = $(this).val().toLowerCase();
