            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin-left: 599px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
    <div class="Navbar">
        <div class="Logo-top-container">
            <img class="logo-img" src="logo2.png" alt="logo">
        </div>
        <h2>Employee Management</h2>
        <div class="Logout">
            <button>Logout</button>
        </div>
    </div>
    <div class="container">
        <input type="text" id="searchInput" placeholder="Search by First Name...">
        <a href="test2.html"><button id="addEmployeeBtn">Add Employee</button></a>
        <table id="employeeTable">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Nationality</th>
                    <th>Date of Birth</th>
                    <th>Position</th>
                    <th>Salary (USD$)</th>
                    <th>Actions</th> <!-- New column for delete and edit icons -->
                </tr>
            </thead>
            <tbody id="employeeList">
                <!-- Employee rows will be dynamically added here -->
            </tbody>
        </table>
    </div>
