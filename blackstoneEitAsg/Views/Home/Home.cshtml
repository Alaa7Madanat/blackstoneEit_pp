@{
    ViewData["Title"] = "Main Page";
    Layout = "_Layout";
}
@model IEnumerable<blackstoneEitAsg.Models.Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url('/img/blackstonemain.png');
            background-size: cover;
            margin: 0;
        }

        .Navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f4f4;
            padding: 10px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 80px;
            font-family: 'Arial', sans-serif;
        }

        #employeeList {
            overflow-y: scroll;
           
            height: fit-content;
            max-height: 150vh;
        }
        .Logo-top-container {
            background-color: #f8f4f4;
            display: flex;
            align-items: center;
        }

        .logo-img {
            width: auto;
            height: auto;
        }

        h2 {
            margin: 0;
            margin-left: 550px;
            color: #333;
            font-family: 'Verdana', sans-serif;
        }

        .Logout button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }


        input[type="text"], button {
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f8f8f8;
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 2px solid #ddd;
        }

        td {
            border-bottom: 1px solid #ddd;
        }

        tr {
            background-color: #DCDCDC;
        }

            tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        tr {
        }

            tr:hover {
                background-color: #e6f7ff;
            }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin-left: 800px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">

        <form id="searchForm" method="get" asp-controller="Home" asp-action="Search">
            <div>
                <input type="text" id="searchInput" name="query" placeholder="Search by First Name...">
            </div>
        </form>


        
        <table id="employeeTable">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Nationality</th>
                    <th>Date of Birth</th>
                    <th>Position</th>
                    <th>Salary (USD$)</th>
                    <th>Actions</th>
                </tr>
            </thead>
           
                <tbody id="employeeList" scrollbars="yes">
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.MiddleName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Nationality</td>
                        <td>@employee.DateOfBirth</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary</td>
                        <td>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id">
                                <span class="glyphicon glyphicon-trash"></span>
                               
                            </a>
                            <a asp-controller="Edit" asp-action="Editemp" asp-route-id="@employee.Id">
                            <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
   
        </table>
       
        <a asp-controller="AddEmployee" asp-action="AddEmp"><button>Add Employee</button></a>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>

</html>
